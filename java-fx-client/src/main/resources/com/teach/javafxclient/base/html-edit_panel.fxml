<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.web.HTMLEditor?>
<?import javafx.scene.web.WebView?>
<!-- Html编辑显示面板FXML配置文件 对应页面交互控制类 fx:controller="com.teach.javafxclient.controller.base.HtmlEditController -->
<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="1000.0" prefWidth="1800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.teach.javafxclient.controller.base.HtmlEditController">
   <children>
      <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="940.0" prefWidth="600.0">
         <top>
            <HTMLEditor fx:id="htmlEditor" prefHeight="400.0" prefWidth="600.0">
               <opaqueInsets>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </opaqueInsets>
            </HTMLEditor>
         </top>
         <center>
            <TextArea fx:id="textArea" prefHeight="400.0" prefWidth="600.0" >
               <opaqueInsets>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </opaqueInsets>
         </TextArea>
         </center>
         <bottom>
            <FlowPane alignment="CENTER" BorderPane.alignment="CENTER">
               <Button mnemonicParsing="false" text="文本到HTML" onAction="#textToHtmlButtonClick" >
                  <FlowPane.margin>
                     <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </FlowPane.margin>
               </Button>
               <Button mnemonicParsing="false" text="HTML到文本" onAction="#htmlToTextButtonClick" >
                  <FlowPane.margin>
                     <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </FlowPane.margin>
               </Button>
               <Button mnemonicParsing="false" text="查看" onAction="#viewButtonClick" >
                  <FlowPane.margin>
                     <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </FlowPane.margin>
               </Button>
               <Button mnemonicParsing="false" text="导入" onAction="#importButtonClick">
                  <FlowPane.margin>
                     <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </FlowPane.margin>
               </Button>
               <Button mnemonicParsing="false" text="导出" onAction="#exportButtonClick">
                  <FlowPane.margin>
                     <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </FlowPane.margin>
               </Button>
            </FlowPane>
         </bottom>
         <HBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </HBox.margin>
         <opaqueInsets>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </opaqueInsets>
      </BorderPane>
      <WebView fx:id="webView" prefHeight="800.0" prefWidth="508.0">
         <HBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </HBox.margin>
      </WebView>
      <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="940.0" prefWidth="600.0">
         <center>
            <Pagination fx:id="pagination" prefHeight="46.0" prefWidth="600.0" BorderPane.alignment="CENTER" />
         </center>
         <HBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </HBox.margin>
      </BorderPane>
   </children>
</HBox>
