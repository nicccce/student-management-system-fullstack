<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<BorderPane xmlns="http://javafx.com/javafx/19" stylesheets="@css/styles.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.teach.javafxclient.controller.student.ScoreTableController">
   <top>
       <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0">
           <children>
               <FlowPane alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="288.0" BorderPane.alignment="CENTER">
                   <children>
                       <MFXButton fx:id="addButton" buttonType="RAISED" minHeight="40.0" minWidth="80.0" mnemonicParsing="false" onAction="#onAddButtonClick"  text="添加">
                           <FlowPane.margin>
                               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </FlowPane.margin>
                       </MFXButton>
                       <MFXButton fx:id="editButton" buttonType="RAISED" minHeight="40.0" minWidth="80.0" mnemonicParsing="false" onAction="#onEditButtonClick"  text="修改">
                           <FlowPane.margin>
                               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </FlowPane.margin>
                       </MFXButton>
                       <MFXButton fx:id="deleteButton" buttonType="RAISED" minHeight="40.0" minWidth="80.0" mnemonicParsing="false" onAction="#onDeleteButtonClick" text="删除">
                           <FlowPane.margin>
                               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </FlowPane.margin>
                       </MFXButton>
                   </children>
               </FlowPane>
               <FlowPane alignment="CENTER" prefHeight="100.0" prefWidth="504.0" BorderPane.alignment="CENTER">
                   <children>
                       <MFXButton buttonType="RAISED" minHeight="40.0" minWidth="80.0" mnemonicParsing="false" onAction="#onQueryButtonClick" prefHeight="23.0" prefWidth="84.0" text="查询">
                           <FlowPane.margin>
                               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </FlowPane.margin>
                       </MFXButton>
                       <Label fx:id="studentLabel" text="学生" >
                           <FlowPane.margin>
                               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </FlowPane.margin>
                       </Label>
                       <ComboBox fx:id="studentComboBox" prefHeight="23.0" prefWidth="89.0">
                           <FlowPane.margin>
                               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </FlowPane.margin>
                       </ComboBox>
                       <Label text="课程">
                           <FlowPane.margin>
                               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </FlowPane.margin>
                       </Label>
                       <ComboBox fx:id="courseComboBox" prefHeight="23.0" prefWidth="109.0">
                           <FlowPane.margin>
                               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </FlowPane.margin>
                       </ComboBox>
                   </children>
               </FlowPane>
           </children>
           <padding>
               <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
           </padding>
       </HBox>
   </top>
   <center>
        <TableView fx:id="dataTableView" >
            <columns>
                <TableColumn fx:id="studentNumColumn" prefWidth="130.0" text="学号" />
                <TableColumn fx:id="studentNameColumn" prefWidth="100.0" text="姓名" />
                <TableColumn fx:id="classNameColumn" prefWidth="140.0" text="班级" />
                <TableColumn fx:id="courseNumColumn" prefWidth="120.0" text="课程号" />
                <TableColumn fx:id="courseNameColumn" prefWidth="140.0" text="课程名" />
                <TableColumn fx:id="creditColumn" text="学分" />
                <TableColumn fx:id="markColumn" prefWidth="120.0" text="成绩" />
            </columns>
        </TableView>
   </center>
</BorderPane>
